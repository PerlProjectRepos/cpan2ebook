% layout 'main', title => 'perlybook';
<h1>PerlyBook</h1>
<form action="/" method="post">
  <input id="in_text" name="in_text" type="text" />
  <br />
  <small><input type="checkbox" name="book_selection" value="distribution" checked> fetch complete release</small>
  <br />
  <input name="EPUB" type="submit" value="EPUB" />
  <input name="MOBI" type="submit" value="MOBI" />
  <br />
</form>
<div id="msg">
  <p>
    <%= $message %>
  </p>
  <%== $optional_message %>
</div>
